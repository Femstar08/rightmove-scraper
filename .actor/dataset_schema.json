{
  "actorSpecification": 1,
  "fields": {
    "type": "object",
    "properties": {
      "id": {
        "type": ["string", "null"],
        "description": "Unique property ID from the portal"
      },
      "url": {
        "type": ["string", "null"],
        "description": "Full property URL"
      },
      "source": {
        "type": ["string", "null"],
        "description": "Portal name (rightmove, zoopla, etc.)"
      },
      "address": {
        "type": ["string", "null"],
        "description": "Full property address"
      },
      "price": {
        "type": ["string", "null"],
        "description": "Property price"
      },
      "description": {
        "type": ["string", "null"],
        "description": "Property description"
      },
      "propertyType": {
        "type": ["string", "null"],
        "description": "Type of property"
      },
      "bedrooms": {
        "type": ["number", "null"],
        "description": "Number of bedrooms"
      },
      "bathrooms": {
        "type": ["number", "null"],
        "description": "Number of bathrooms"
      },
      "images": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Array of image URLs"
      },
      "addedOn": {
        "type": ["string", "null"],
        "description": "Date property was first listed"
      },
      "distressKeywordsMatched": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Distress keywords found"
      },
      "distressScoreRule": {
        "type": ["number", "null"],
        "description": "Distress score (0-10)"
      },
      "agent": {
        "type": ["string", "null"],
        "description": "Agent or agency name"
      },
      "agentPhone": {
        "type": ["string", "null"],
        "description": "Agent contact phone"
      },
      "tenure": {
        "type": ["string", "null"],
        "description": "Property tenure"
      },
      "features": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Property features"
      },
      "_isDuplicate": {
        "type": ["boolean", "null"],
        "description": "Cross-site duplicate flag"
      },
      "_scrapedAt": {
        "type": ["string", "null"],
        "description": "Timestamp when scraped"
      }
    }
  },
  "views": {
    "overview": {
      "title": "Overview",
      "transformation": {
        "fields": [
          "id",
          "url",
          "source",
          "address",
          "price",
          "propertyType",
          "bedrooms",
          "bathrooms",
          "distressScoreRule",
          "distressKeywordsMatched",
          "addedOn",
          "agent",
          "_isDuplicate"
        ]
      },
      "display": {
        "component": "table",
        "properties": {
          "url": {
            "label": "Property URL",
            "format": "link"
          },
          "source": {
            "label": "Portal",
            "format": "text"
          },
          "address": {
            "label": "Address",
            "format": "text"
          },
          "price": {
            "label": "Price",
            "format": "text"
          },
          "propertyType": {
            "label": "Type",
            "format": "text"
          },
          "bedrooms": {
            "label": "Beds",
            "format": "number"
          },
          "bathrooms": {
            "label": "Baths",
            "format": "number"
          },
          "distressScoreRule": {
            "label": "Distress Score",
            "format": "number"
          },
          "distressKeywordsMatched": {
            "label": "Distress Keywords",
            "format": "array"
          },
          "addedOn": {
            "label": "Added On",
            "format": "date"
          },
          "agent": {
            "label": "Agent",
            "format": "text"
          },
          "_isDuplicate": {
            "label": "Duplicate",
            "format": "boolean"
          }
        }
      }
    }
  }
}
